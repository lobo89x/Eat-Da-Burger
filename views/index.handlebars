<div class="container">
    <div class="row">
      <div class="col-md-5">
        <h2>Veggie Burgers I Have not Tried</h2>
      </div>
      <div class="col-md-2">
        <h2>New Burger Type</h2>
            <form class="create-form">
            <div class="form-group">
                <label for="ca">Burger Desc:</label>
                <input type="text" id="ca" name="newBurger">
            </div>
            <button type="submit">Add Burger</button>
            </form>
      </div>
      <div class="col-md-5">
        <h2>Veggie Burgers I Have Tried</h2>
      </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
      </div>
  </div>



