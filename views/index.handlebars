<div class="container">
    <div class="row">
      <div class="col-md-5 sideTitle">
        <h2>Veggie Burgers I Have not Tried</h2>
        	<img src="CuteBurger002.png" width="170" height="170">
      </div>
      <div class="col-md-2">
        <h2>New Burger Type</h2>
            <form class="create-form">
            <div class="form-group">
                <label for="bni">Burger Desc:</label>
                <input type="text" id="burgerNinput" name="newBurger">
            </div>
            <button type="submit">Add Burger</button>
            </form>
      </div>
      <div class="col-md-5 sideTitle">
        <h2>Veggie Burgers I Have Tried</h2>
	        <img src="EATENCuteBurger001.png" width="170" height="170">
	      </div>
    </div>
    <div class="row">
        <div class="col-md-5 burger-Display">
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block devoured=true}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5 burger-Display">
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burger-block devoured=false}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
      </div>
  </div>



